/* Voicer.1 */
Voicer(1, 16) { :e |
    let freq = (e.x * [25, LfNoise2(0.25) * 0.25 + 25] + 48).MidiCps;
    EqPan2(Rlpf(Saw(freq), e.y + 0.75 * freq, e.y * 0.5).sum, e.i * 2 - 1) * e.w * e.z
}.sum * 0.5

