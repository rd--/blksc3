// BufRd ; phasor as phase input
var nc = 2;
var buf = SoundFileBuffer("piano-c5", nc);
{
    var tr = Impulse(2 ** Rand(1, 3) / BufDur(buf), 0).kr;
    var mnn = TIRand(-2, 0, tr) * 12 + TChoose(tr, [-3, 0, 2, 5, 7 ]);
    var rt = mnn.midiRatio * BufRateScale(buf);
    var ph = Phasor(tr, rt, 0, BufFrames(buf), 0);
    BufRd(nc, buf, ph, 0, 2)
}.dup(6).sum * 0.25
